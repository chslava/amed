extends layouts/home.pug

block content
    main.ui.container.projects.page
        div.ui.breadcrumb
            a(href="index.html").section Sākums
            div.divider //
            div.active.section Projektēšana
        div.ui.grid
            div.ui.row
                div.sixteen.wide.mobile.eight.wide.tablet.eight.wide.computer.column
                    h1.ui.left.header.decored Projektēšana
                    p A.Medical kopā ar pieredzējušu arhitektu birojiem un celtniecības kompānijām attīsta darbību medicīnas iestāžu telpu
                        | projektēšanas, funkcionālās plānošanas un rekonstrukcijas nozarēs, piedāvājot mūsdienu prasībām atbilstošus tehnoloģiskos risinājumus.
                    ul.small.circles-list
                        li 10 gadu pieredze
                        li Plašākā iekārtu izvēle
                        li Cits ieguvums

                    h2.ui.left.header.decored Visa veida projektēšana
                    p Operāciju zālēm, intensīvās terapijas un reanimācijas nodaļām, neonatoloģijas nodaļām, morgu un patanatomijas nodaļām,
                        | centrālās sterilizācijas nodaļām u.c.

                div.sixteen.wide.mobile.eight.wide.tablet.eight.wide.computer.column
                    img(src="img/projects-img.jpg").ui.shadowed.centered.image

    section.secondary-services
        div.ui.container
            h2.ui.header.centered.decored Plašs aprīkojums
            div.ui.grid
                div.center.aligned.ten.wide.centered.column
                    p Māsu izsaukuma sistēmām, medicīnas gāzes sistēmām, sterilizācijas iekārtām, gaisa attīrīšanas risinājumiem,
                        | vizuālo diagnostiku (US, RTG, CR, DR, CT, MRI), iekārtām onkoloģijai, dezinfekcijai, dermatoloģijai,
                        | funkcionālai diagnostikai, LOR, stomatoloģijai, uroloģijai,  u.c.
                div.three.column.row
                    img(src="img/projects/1.jpg").ui.image.column
                    img(src="img/projects/2.jpg").ui.image.column
                    img(src="img/projects/3.jpg").ui.image.column
                div.three.column.row
                    img(src="img/projects/1.jpg").ui.image.column
                    img(src="img/projects/2.jpg").ui.image.column
                    img(src="img/projects/3.jpg").ui.image.column




    section.ui.container.very.padded
        div.ui.grid
            div.ui.stretched.row
                div.sixteen.wide.mobile.eight.wide.tablet.ten.wide.computer.column
                    h2.ui.left.header.decored Vēl apraksts
                    p A.MEDICAL SERVISS komandu veido sertificēti un pieredzes bagāti servisa inženieri, kas nodrošina medicīnas
                        | iekārtu, kā arī industriālo un drošības risinājumu servisa centra funkcijas. A.MEDICAL ir divi atbalsta
                        | centri Latvijā - Rīgā un Daugavpilī. Mūsu serviss sadarbojas ar vadošajām Latvijas medicīnas, industriālo
                        | un drošības risinājumu iestādēm, kā arī iestādēm ārpus Latvijas – Igaunijā, Lietuvā un Krievijā. A.Medical
                        | kopā ar pieredzējušu arhitektu birojiem un celtniecības kompānijām attīsta darbību medicīnas iestāžu telpu
                        | projektēšanas, funkcionālās plānošanas un rekonstrukcijas nozarēs, piedāvājot mūsdienu prasībām atbilstošus
                        | tehnoloģiskos risinājumus.
                div.sixteen.wide.mobile.eight.wide.tablet.six.wide.computer.column
                    div.ui.raised.center.aligned.padded.segment
                        h3.title.padded.large Vēlies realizēt projectu?
                        p
                            a.ui.basic.fluid.button Sazinies ar mums


    include sections/subscribe