// Tablet
@media only screen and (max-width: 1200px) and (min-width: 768px) {
  .secondary-services {
    margin-bottom: 65px;
  }
  .secondary-services ~ .ui.container {
    margin-bottom: 50px;
  }

  .contacts {
    .info {
      background: #636463;
      min-height: 100%;
      width: 100%;
      position: absolute;
      left: 0;
      top: 0;
    }

    .map {
      position: relative;
      right: 0;
      top: 0;
      width: 100%;
      float: none;
      background: lightgoldenrodyellow;
      min-height: 400px;
      z-index: 10;
      margin-top: 2rem;
    }
  }

}

.contact-address br {
  display: none;
}

// Mobile
@media only screen and (max-width: 767px) and (min-width: 320px) {
  .subscribe .ui.primary.button {
    margin-top: 0;
  }
  .secondary-services {
    padding-left: 25px;
    padding-right: 25px;
  }
  .secondary-services .content {
    //max-width: 400px;
    margin-top: 12px;
    max-width: 190px;
    vertical-align: middle;
    display: table-cell;
  }
  .coo-respose {
    background: linear-gradient(to right,rgba(255,255,255,.75) 0,#fff 46%), url(../img/light-bg.png) no-repeat !important;
    background-size: cover !important;
    padding-bottom: 4rem !important;
    margin-bottom: -22px;
    border-top: 1px solid #e6e6e6;
    padding-left: 25px;
    padding-right: 25px;
  }
  .coo-respose > .grid {
    margin: 0;
  }
  .contacts {
    margin-top: -15px;
  }
  .secondary-services {
    margin-bottom: 65px;
  }
  .secondary-services ~ .ui.container {
    margin-bottom: 50px;
  }
  .service.page .ui.basic.compact.segment {
    margin: 30px auto;
  }
  .image-icon {
    margin-right: 15px;
    top: 6px;
  }
  .image-icon.icon-shield {
    top: 15px;
  }
  .contacts .ui.grid {
    margin-top: 15px;
  }
  .hide-for-mobile {
    display: none !important;
  }
  #about-us-text {
    margin: 0 auto;
    text-align: center;
    .ui.header.left {
      text-align: center;
      &:before {
        margin: 30px auto 20px;
      }
    }
  }
  .benefits {
    margin-top: 60px !important;
  }
  .about-us ~ .services {
    border-top: none;
    position: relative;

    &:before {
      background: #e6e6e6;
      width: 240px;
      height: 1px;
      margin: 0 auto;
      content: '';
      position: absolute;
      top: 0;
      left: 50%;
      transform: translateX(-50%);

    }
  }
  .contact-address, .contact-details {
    padding-left: 30px !important;
    padding-right: 30px !important;
    p {
      font-size: 12px !important;
      line-height: 20px !important;
    }
  }
  #contacts-divider {
    top: 8px !important;
  }
  .contact-address h1, .contact-details h2 {
    font-size: 26px !important;
  }
  .contact-form {
    margin-top: 45px;
    margin-left: 15px;
    margin-right: 15px;
  }
  .contact-form textarea {
    max-height: 140px !important;
  }
  .contact-form .button {
    margin-top: 15px !important;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    width: 180px !important;
  }
  .mobile-centered {
    text-align: center !important;
    &:before {
      margin-left: auto !important;
      margin-right: auto !important;
    }
  }

  .contact-address a {
    color: #ffffff;
    text-decoration: underline;
    &:hover {
      color: #ff6b01;
    }
  }

}

// Special breakpoint
@media (max-width: 410px) {
  .subscribe .ui.primary.button {
    margin-top: 15px;
  }
}

// Tablet 768 - 1024
@media only screen and (min-width: @tabletBreakpoint) and (max-width: @largestTabletScreen) {
  .services .column {
    //border-bottom: 1px solid #e7e7e7;
    margin-bottom: 20px;
    max-width: 370px;
  }
  #header .logo {
    width: 74px;
  }
  #header .ui.input.search input {
    height: 50px;
  }
  #header .ui.grid.container .right.aligned.column .mob-toogle-menu {
    font-size: 26px;
  }
  .image-icon {
    margin-right: 30px;
  }
  .tablet-centered {
    float: none !important;
    margin: 0 auto;
  }
  .hide-for-tablet {
    display: none !important;
  }
  .contacts .ui.grid {
    margin-top: 15px;
  }
  .about-us {
    max-width: 600px !important;
  }
  #service-directions {
    font-size: 36px;
    margin: 20px 0 60px 0;
  }
  .coo-respose {
    margin-top: -34px;
    padding-bottom: 55px !important;
    background-size: cover !important;
    margin-bottom: -24px;
    border-top: 1px solid #e6e6e6;

    h2.ui.header {
      font-size: 36px;
      line-height: 1;
    }
  }
  .secondary-services .column {
    margin-bottom: 30px;
  }
  .contact-address {
    margin-top: 40px !important;
  }
  .contact-details {
    margin-top: 47px;
  }
  .contact-address h1, .contact-details h2 {
    font-size: 36px !important;
  }
  .contact-address br {
    display: block;
  }
  .contacts .ui.container {
    max-width: 600px;
  }
  .contacts {
    margin-top: -15px;
  }
  .contact-form {
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  .contact-form input {
    max-width: 300px;
  }
  .contact-form textarea {
    max-width: 460px;
  }
  #contact-image {
    float: left;
    margin-top: 30px;
  }
  .contact-details h2 {
    margin-bottom: 24px !important;
  }
  .contact-details br {
    content: '';
    display: block;
    margin: 30px 0;
  }

}

