  .about-us .services {
    margin-top:0;
    padding-top:40px;
    border-top:1px solid #e6e6e6!important;
  }
  .service .benefits-icon {
    color: #ff6b01;
    margin-top:60px;
    font-size:60px;
  }
}


.ui.segment {
  h4, h3, .title {
    &.title {
      margin-top:15px;
    }
    &.padded {
      margin: 40px 0;
    }
    &.large {

      font-size: 25px;
      font-weight: 700;
      line-height: 30px;
      min-height: 30px;
    }
    color: #414141;
  }
}


