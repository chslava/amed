.styleplaceholder(@color:#FFF) {

  &::-webkit-input-placeholder {
    color: @color;
    opacity:1;
  }
  & :-moz-placeholder { /* Firefox 18- */
    color: @color;
    opacity:1;
  }

  &::-moz-placeholder {  /* Firefox 19+ */
    color: @color;
    opacity:1;
  }

  &:-ms-input-placeholder {
    color: @color;
    opacity:1;
  }
}



