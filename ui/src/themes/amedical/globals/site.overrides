@mediumContainerWidth: 598px;
@media (min-width: 768px) and (max-width: 992px) {
  .ui.container {
    width: @mediumContainerWidth!important;
  }
}

@media (min-width: 1200px)  {
  .ui.container {
    width: 1180px!important;
  }
}


