main.page {
  padding-top:1rem;
  margin-bottom:100px;
  > .grid {
    margin-top: 50px;
  }
}
.about-us {
  h1.ui.header {
    font-size: 36px;
    font-weight: 700;
    line-height: 44px;
  }
}
